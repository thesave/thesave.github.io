---
layout: null
---
<?xml version="1.0"?>
<feed xmlns="http://www.w3.org/2005/Atom">
 
<title>{{ site.title | xml_escape }}</title>
  <link href="{{ site.url }}"/>
  <link type="application/atom+xml" rel="self"  href="{{ "/feed.xml" | prepend: site.baseurl | prepend: site.url }}"/>
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <id>{{ site.url }}</id>
  <author>
    <name>Saverio Giallorenzo</name>
  </author>

  {% for post in site.posts %}
  <entry>
    <id>{{ post.url | prepend: site.baseurl | prepend: site.url }}</id>
    <link type="text/html" rel="alternate" href="{{ post.url | prepend: site.baseurl | prepend: site.url }}"/>
    <title>{{ post.title }}</title>
    <published>{{ post.date | date_to_xmlschema }}</published>
    <updated>{{ post.date | date_to_xmlschema }}</updated>
    <author>
      <name>Saverio Giallorenzo</name>
      <uri>{{site.url}}</uri>
    </author>
    <content type="html">{{ post.content | xml_escape }}</content>
  </entry>
  {% endfor %}
 
</feed>